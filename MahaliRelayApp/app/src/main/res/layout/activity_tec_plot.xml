<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/plot_text_bias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/text_bias"
        android:layout_margin="16dp" />

    <SeekBar
        android:id="@+id/plot_bar_bias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/plot_text_bias"
        android:layout_toStartOf="@id/plot_text_bias"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:progress="100"
        android:max="200" />

    <LinearLayout
        android:id="@+id/tec_plot_root"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/plot_text_bias"/>

</RelativeLayout>